<p id="notice"><%= notice %></p>

<h1>レポート一覧</h1>

<br><br>
<%= link_to 'レポートを新規作成', new_diary_path %>
<table border="1">
  <thead>
    <tr>
      <th>レポート番号</th>
      <th>タイトル</th>
      <th>レポート</th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= link_to diary.report_number, diary %></td><br>
        <td><%= diary.title %></td>
        <td><%= simple_format(diary.body) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>