<h1>レポート閲覧</h1>

<p id="notice"><%= notice %></p>

<p>
	<strong>レポート番号:</strong>
	<%= @diary.report_number %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @diary.title %>
</p>

<p>
  <strong>本文:</strong>
  <%= @diary.body %>
</p>

<p>
	<strong>更新日時:</strong>
	<%= @diary.updated_at %>
</p>

<%= link_to 'レポート編集', edit_diary_path(@diary) %> |
<%= link_to "削除", @diary, method: :delete, data: { confirm: "本当に削除しますか？" } %> |
<%= link_to '一覧に戻る', diaries_path %>
